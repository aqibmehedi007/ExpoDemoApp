{
  "expo": {
    "name": "Character Collection App",
    "slug": "character-collection-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "description": "A React Native app for collecting and managing character information with modern UI and animations.",
    "primaryColor": "#007AFF",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a1a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.charactercollection",
      "buildNumber": "1",
      "infoPlist": {
        "NSUserNotificationUsageDescription": "This app uses notifications to keep you updated about new characters and app activities."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a1a"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.yourcompany.charactercollection",
      "versionCode": 1,
      "permissions": [
        "android.permission.VIBRATE",
        "android.permission.RECEIVE_BOOT_COMPLETED"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#007AFF"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "ef6f7d8f-c64e-4a59-af64-851f08d76778"
      }
    }
  }
}
